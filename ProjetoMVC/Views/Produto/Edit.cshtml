@model Projeto03.ProjetoMVC.Models.Produto
@{
    ViewData["Title"] = "Editar";
}

<h2>Editar Produto</h2>

<form asp-action="Edit" method="post">
    @* hidden field so the Id is sent back to the server *@
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" step="0.01" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>
